{{#if updateItemForm}}
    <h4>Update {{item.name}} </h4>
    <div>
        <form>
            <div class="form-group">
                <label for="name">Name:</label>
                {{input value=item.name placeholder=item.name id="name" class="form-control"}}
            </div>
            
            <div class="form-group">
                <label for="description">Description:</label>
                {{textarea value=item.description placeholder=item.description id="description" class="form-control"}}
            </div>
            
            <div class="form-group">
                <label for="cost">Cost:</label>
                {{input value=item.cost placeholder=item.cost id="cost" class="form-control"}}
            </div>
            
            <button class="btn btn-success" {{action 'update' item}}>Update Item</button>

        </form>
    </div>
{{else}}
    <button{{action 'updateItemForm'}} class="btn btn-info">Update</button>
{{/if}}